{
  "name": "spryker-shop/content-product-widget",
  "type": "library",
  "description": "ContentProductWidget module",
  "license": "proprietary",
  "require": {
    "php": ">=7.1",
    "spryker/content-product": "^0.1.0",
    "spryker/kernel": "^3.24.0",
    "spryker/product-storage": "^1.10.0",
    "spryker/twig": "^3.5.0",
    "spryker/twig-extension": "^1.0.0"
  },
  "require-dev": {
    "spryker/code-sniffer": "*",
    "spryker/container": "*",
    "spryker/testify": "*"
  },
  "suggest": {
    "spryker/container": "If you want to use Twig Plugins"
  },
  "autoload": {
    "psr-4": {
      "SprykerShop\\": "src/SprykerShop/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SprykerShopTest\\": "tests/SprykerShopTest/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
