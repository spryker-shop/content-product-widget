{
  "name": "spryker-shop/content-product-widget",
  "type": "library",
  "description": "ContentProductWidget module",
  "license": "proprietary",
  "require": {
    "spryker/product-storage": "^1.11.0",
    "spryker/content-product": "^1.0.0",
    "spryker/kernel": "^3.24.0",
    "spryker/twig-extension": "^1.0.0"
  },
  "require-dev": {
    "spryker/code-sniffer": "*",
    "spryker/testify": "*",
    "spryker/twig": "*",
    "spryker/container": "*"
  },
  "suggest": {
    "spryker/twig": "Use this module when using plugins that need Twig dependencies.",
    "spryker/container": "If you want to use Twig Plugins"
  },
  "autoload": {
    "psr-4": {
      "SprykerShop\\": "src/SprykerShop/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SprykerShopTest\\": "tests/SprykerShopTest/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
